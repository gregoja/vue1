{"ast":null,"code":"export default {\n  props: [\"totalRecords\", \"perPage\", \"page\"],\n  computed: {\n    pages() {\n      const remainder = this.totalRecords % this.perPage;\n\n      if (remainder > 0) {\n        return Math.floor(this.totalRecords / this.perPage) + 1;\n      } else {\n        return this.totalRecords / this.perPage;\n      }\n    },\n\n    currentPage() {\n      return this.page;\n    }\n\n  },\n  methods: {\n    changePage(offset) {\n      switch (offset) {\n        case -Infinity:\n          this.page = 1;\n          break;\n\n        case -1:\n          this.page = this.page > 1 ? this.page - 1 : this.page;\n          break;\n\n        case 1:\n          this.page = this.page < this.pages ? this.page + 1 : this.page;\n          break;\n\n        case Infinity:\n          this.page = this.pages;\n      }\n\n      this.$emit(\"pageChanged\", this.page);\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAuBA,eAAe;EACbA,KAAK,EAAE,CAAC,cAAD,EAAiB,SAAjB,EAA4B,MAA5B,CADM;EAEbC,QAAQ,EAAE;IACRC,KAAK,GAAG;MACN,MAAMC,SAAQ,GAAI,KAAKC,YAAL,GAAoB,KAAKC,OAA3C;;MAEA,IAAIF,SAAQ,GAAI,CAAhB,EAAmB;QACjB,OAAOG,IAAI,CAACC,KAAL,CAAW,KAAKH,YAAL,GAAoB,KAAKC,OAApC,IAA+C,CAAtD;MACF,CAFA,MAEO;QACL,OAAO,KAAKD,YAAL,GAAoB,KAAKC,OAAhC;MACF;IACD,CATO;;IAUFG,WAAW,GAAE;MACf,OAAO,KAAKC,IAAZ;IACF;;EAZM,CAFG;EAgBbC,OAAO,EAAE;IACPC,UAAU,CAACC,MAAD,EAAS;MACjB,QAAQA,MAAR;QACE,KAAK,CAACC,QAAN;UACE,KAAKJ,IAAL,GAAY,CAAZ;UACA;;QACF,KAAK,CAAC,CAAN;UACE,KAAKA,IAAL,GAAY,KAAKA,IAAL,GAAY,CAAZ,GAAgB,KAAKA,IAAL,GAAY,CAA5B,GAAgC,KAAKA,IAAjD;UACA;;QACF,KAAK,CAAL;UACE,KAAKA,IAAL,GAAY,KAAKA,IAAL,GAAY,KAAKP,KAAjB,GAAyB,KAAKO,IAAL,GAAY,CAArC,GAAyC,KAAKA,IAA1D;UACA;;QACF,KAAKI,QAAL;UACE,KAAKJ,IAAL,GAAY,KAAKP,KAAjB;MAXJ;;MAcA,KAAKY,KAAL,CAAW,aAAX,EAA0B,KAAKL,IAA/B;IACD;;EAjBM;AAhBI,CAAf","names":["props","computed","pages","remainder","totalRecords","perPage","Math","floor","currentPage","page","methods","changePage","offset","Infinity","$emit"],"sourceRoot":"","sources":["D:\\OneDrive\\IdeaProject