{"ast":null,"code":"export default {\n  props: [\"totalRecords\", \"perPage\", \"page\"],\n  computed: {\n    pages() {\n      const remainder = this.totalRecords % this.perPage;\n\n      if (remainder > 0) {\n        return Math.floor(this.totalRecords / this.perPage) + 1;\n      } else {\n        return this.totalRecords / this.perPage;\n      }\n    }\n\n  },\n  methods: {\n    changePage(offset) {\n      let chosenPage = 0;\n\n      switch (offset) {\n        case -Infinity:\n          chosenPage = 1;\n          break;\n\n        case -1:\n          chosenPage = this.page > 1 ? page - 1 : page;\n          break;\n\n        case 1:\n          chosenPage = page < this.pages ? page + 1 : page;\n          break;\n\n        case Infinity:\n          chosenPage = this.pages;\n      }\n\n      this.$emit(\"pageChanged\", chosenPage);\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAuBA,eAAe;EACbA,KAAK,EAAE,CAAC,cAAD,EAAiB,SAAjB,EAA2B,MAA3B,CADM;EAEbC,QAAQ,EAAE;IACRC,KAAK,GAAG;MACN,MAAMC,SAAQ,GAAI,KAAKC,YAAL,GAAoB,KAAKC,OAA3C;;MAEA,IAAIF,SAAQ,GAAI,CAAhB,EAAmB;QACjB,OAAOG,IAAI,CAACC,KAAL,CAAW,KAAKH,YAAL,GAAoB,KAAKC,OAApC,IAA+C,CAAtD;MACF,CAFA,MAEO;QACL,OAAO,KAAKD,YAAL,GAAoB,KAAKC,OAAhC;MACF;IACD;;EATO,CAFG;EAabG,OAAO,EAAE;IACPC,UAAU,CAACC,MAAD,EAAS;MACjB,IAAIC,UAAS,GAAI,CAAjB;;MACA,QAAQD,MAAR;QACE,KAAK,CAACE,QAAN;UACED,UAAS,GAAI,CAAb;UACA;;QACF,KAAK,CAAC,CAAN;UACEA,UAAS,GAAI,KAAKE,IAAL,GAAY,CAAZ,GAAgBA,IAAG,GAAI,CAAvB,GAA2BA,IAAxC;UACA;;QACF,KAAK,CAAL;UACEF,UAAS,GAAIE,IAAG,GAAI,KAAKX,KAAZ,GAAoBW,IAAG,GAAI,CAA3B,GAA+BA,IAA5C;UACA;;QACF,KAAKD,QAAL;UACED,UAAS,GAAI,KAAKT,KAAlB;MAXJ;;MAcA,KAAKY,KAAL,CAAW,aAAX,EAA0BH,UAA1B;IACD;;EAlBM;AAbI,CAAf","names":["props","computed","pages","remainder","totalRecords","perPage","Math","floor","methods","changePage","offset","chosenPage","Infinity","page","$emit"],"sourceRoot":"","sources":["D:\\OneDrive\\IdeaProjects\\app\\src\\components\\ThePagination.vue"],"sourcesContent":["<template>\r\n  <nav class=\"pagination\">\r\n    <ul class=\"pagination justify-content-center\">\r\n      <li class=\"page-item\">\r\n        <a class=\"page-link\" @click=\"changePage(-Infinity)\">&lt;&lt;</a>\r\n      </li>\r\n      <li class=\"page-item\">\r\n        <a class=\"page-link\" @click=\"changePage(-1)\">&lt;</a>\r\n      </li>\r\n      <li class=\"page-item disabled\">\r\n        <a class=\"page-link\">Str√°nka {{ page }}/{{ pages }}</a>\r\n      </li>\r\n      <li class=\"page-item\">\r\n        <a @click=\"changePage(1)\" class=\"page-link\">&gt;</a>\r\n      </li>\r\n      <li class=\"page-item\">\r\n        <a class=\"page-link\" @click=\"changePage(Infinity)\">&gt;&gt;</a>\r\n      </li>\r\n    </ul>\r\n  </nav>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  props: [\"totalRecords\", \"perPage\",\"page\"],\r\n  computed: {\r\n    pages() {\r\n      const remainder = this.totalRecords % this.perPage;\r\n\r\n      if (remainder > 0) {\r\n        return Math.floor(this.totalRecords / this.perPage) + 1;\r\n      } else {\r\n        return this.totalRecords / this.perPage;\r\n      }\r\n    },\r\n  },\r\n  methods: {\r\n    changePage(offset) {\r\n      let chosenPage = 0;\r\n      switch (offset) {\r\n        case -Infinity:\r\n          chosenPage = 1;\r\n          break;\r\n        case -1:\r\n          chosenPage = this.page > 1 ? page - 1 : page;\r\n          break;\r\n        case 1:\r\n          chosenPage = page < this.pages ? page + 1 : page;\r\n          break;\r\n        case Infinity:\r\n          chosenPage = this.pages;\r\n      }\r\n\r\n      this.$emit(\"pageChanged\", chosenPage);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.pagination {\r\n  margin: auto;\r\n  margin-top: 3rem;\r\n  margin-bottom: 2rem;\r\n}\r\n.page-item:not(.disabled) {\r\n  cursor: pointer;\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module"}